---
- name: Harshitha Chegu's account
  become:
    yes
  hosts: dev.kmap.arizona.edu:uamap-dev.arl.arizona.edu
      
  tasks:

  - name: create chegu account
    user:
      name:
        chegu
      groups:
        developer
      append:
        yes
      comment:
        "Harshitha Chegu"
      shell:
        /bin/bash
      password: 
        "!"
      
  - name: set ssh authorized key
    authorized_key:
      user:
        chegu
      state:
        present
      key:
        "{{ lookup('file', '/etc/ansible/keys/chegu.pub') }}"
      manage_dir:
        yes
